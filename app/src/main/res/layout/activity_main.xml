<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/fondomain"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".Game.MainActivity">

    <LinearLayout
        android:layout_width="238dp"
        android:layout_height="120dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="25dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="168dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_bomb"
            android:layout_width="101dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:contentDescription="@string/image_bomb"
            app:srcCompat="@drawable/bomb_image" />

        <Button
            android:id="@+id/buttonAyuda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:text="@string/button_ayuda" />

        <Button
            android:id="@+id/buttonIniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:text="@string/button_iniciar" />

        <Button
            android:id="@+id/buttonsalir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red_low"
            android:text="@string/salir_text" />
    </LinearLayout>

    <Switch
        android:id="@+id/switchMusic"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:shadowColor="#FFFFFF"
        android:switchTextAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="@string/sonido_button"
        android:textColorHighlight="#EE45DC07"
        android:textColorHint="#47FB05"
        android:textColorLink="#36FA0A"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>