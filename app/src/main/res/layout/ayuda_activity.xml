<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_helpsign" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="AYUDA"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Bienvenido al juego del BUSCA MINAS!"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tuputamadre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:text="@string/tuputamadre" />


    <Button
        android:id="@+id/backToMain"
        android:layout_width="190dp"
        android:layout_height="78dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="?attr/colorButtonNormal"
        android:drawableLeft="@drawable/ic_backarrow"
        android:padding="16dp"
        android:text="IR AL JUEGO"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="15dp" />
</LinearLayout>