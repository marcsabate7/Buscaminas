<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/interrogant_image"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:contentDescription="@string/description_ayuda"
            app:srcCompat="@drawable/ic_helpsign" />
    </LinearLayout>

    <TextView
        android:id="@+id/ayuda_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/ayuda_title"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/text_ayuda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_ayuda" />


    <Button
        android:id="@+id/backToMain"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:backgroundTint="?attr/colorButtonNormal"
        android:drawableLeft="@drawable/ic_backarrow"
        android:padding="16dp"
        android:text="@string/back_pantalla_inicio"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:cornerRadius="15dp" />
</LinearLayout>