<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPartidaMarxa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/partida_en_marxa" />

        <TextView
            android:id="@+id/text_flag"
            android:layout_width="208dp"
            android:layout_height="54dp"
            android:text="@string/message_flag" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seconds" />

        <TextView
            android:id="@+id/casillasid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/casillas" />

    </LinearLayout>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#A13535"
        android:gravity="center"
        android:horizontalSpacing="2dp"
        android:numColumns="auto_fit"
        android:padding="10dp"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2dp"></GridView>

</LinearLayout>